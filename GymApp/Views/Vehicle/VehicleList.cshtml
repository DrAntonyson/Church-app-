@model IEnumerable<GymApp.Models.Vehicle>
@{
    ViewBag.Title = "VehicleList";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}

<div class="content-wrapper">
    <h5 class="title">Vehicles</h5>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Color</th>
                <th>Number Plate</th>
                <th>Traveled Distansce</th>
                <th>Status</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="5">
                        <p class="text-center m-0">No Records Found</p>
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.VehicleName</td>
                        <td>@item.VehicleColor</td>
                        <td>@item.NumberPlate</td>
                        <td>@item.TraveledDistance KM</td>
                        <td>@item.Status</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Image))
                            {
                                <img src="~/Images/Uploads/Vehicles/@item.Id/@item.Image" alt="Vehicle Image" style="width: 145px; height: 145px;" />
                            }
                            else
                            {
                                <p>No Image Available</p>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>