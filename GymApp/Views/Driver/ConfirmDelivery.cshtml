@model GymApp.Models.Order
@{
    ViewBag.Title = "ConfirmDelivery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <h4 class="title">Order Delivered</h4>
    <div class="row">
        <div class="col-3">
            <p class="m-0">Order Number</p>
        </div>
        <div class="col-3">
            <p class="m-0"><b> : @Model.Id</b></p>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <p class="m-0">Email</p>
        </div>
        <div class="col-3">
            <p class="m-0"><b> : @Model.DeliveryFirstName @Model.DeliveryLastName</b></p>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <p>Pickup Address</p>
        </div>
        <div class="col-3">
            <p><b> : @Model.DeliveryAddress</b></p>
        </div>
    </div>
    <hr />
    <p>Confirm that delivery is complete.</p>
    <hr />
    @using (Html.BeginForm("ConfirmDelivery", "Driver", FormMethod.Post))
    {
        <button type="submit" class="btn btn-success">Confirm Delivery</button>
    }
</div>


